{
  "name": "criticseven",
  "version": "0.1.0",
  "description": "Movie Rating Application",
  "author": "Henry Cuffy",
  "license": "MIT",
  "private": false,
  "main": "./server.js",
  "scripts": {
    "start": "yarn prod",
    "install:client": "cd client && yarn install",
    "build": "yarn clean && yarn transpile",
    "client": "cd client && yarn start",
    "server": "node ./dist-server/index",
    "dev": "NODE_ENV=development yarn build && yarn server",
    "start:dev": "concurrently \"yarn dev\" \"yarn client\"",
    "prod": "NODE_ENV=production yarn build && yarn server",
    "start:prod": "concurrently \"yarn prod\" \"yarn client\"",
    "debug:dev": "NODE_ENV=development DEBUG=criticseven:* yarn build && yarn server",
    "clean": "rimraf dist-server",
    "transpile": "babel ./server --out-dir dist-server",
    "heroku-postbuild": "cd client && yarn install && yarn build",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.4",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-flow": "^7.8.3",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "flow-bin": "^0.120.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "yarn dev",
    "watch": [
      "server/*"
    ]
  }
}
